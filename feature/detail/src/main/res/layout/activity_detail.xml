<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="vm"    type="kr.co.architecture.feature.detail.DetailViewModel"/>
        <variable name="state" type="kr.co.architecture.feature.detail.DetailUiState"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:pagerItems="@{state.pages}"
            app:pagerStartIndex="@{state.startIndex}"
            app:pagerEnabled="@{state.pagingEnabled}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
